<Window x:Class="CommunityBookLovers.MessegeBoxes.MessegeBoxFriend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunityBookLovers.MessegeBoxes"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
            Title="Информация" Height="290" Width="400">
    <Grid Margin="0,0,0,1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="211" Width="325">
            <TextBlock Text="Вы уже находитесь в разделе Друзья." FontSize="14" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <Image HorizontalAlignment="Center" Width="116" Height="100" Margin="10" 
               wpfAnimatedGif:ImageBehavior.AnimatedSource="pack://application:,,,/photo/angry1.gif"/>
            <Button Content="OK" HorizontalAlignment="Center" Width="100" Margin="10" Click="OkButton_Click" Height="22"/>
        </StackPanel>
    </Grid>
</Window>
