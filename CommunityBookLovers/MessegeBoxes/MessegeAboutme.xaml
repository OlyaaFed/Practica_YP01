<Window x:Class="CommunityBookLovers.MessegeBoxes.MessegeAboutme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunityBookLovers.MessegeBoxes"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Информация" Height="290" Width="350">
    <Grid Margin="0,0,0,44">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="225" Width="328" Grid.ColumnSpan="2" Margin="11,0,0,0">
            <TextBlock Text="Вы уже находитесь на вкладке о себе." FontSize="14" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <Image HorizontalAlignment="Center" Width="100" Height="100" Margin="10" 
               wpfAnimatedGif:ImageBehavior.AnimatedSource="pack://application:,,,/photo/hapc..gif"/>
            <Button Content="OK" HorizontalAlignment="Center" Width="100" Margin="10" Click="OkButton_Click" Height="21"/>
        </StackPanel>
    </Grid>
</Window>
